# MCPX Configuration - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env TO GIT!

# Bioclin API Configuration
BIOCLIN_API_URL=https://bioclin.vindhyadatascience.com/api/v1

# OAuth Configuration (uncomment when enabling auth)
# AUTH0_DOMAIN=your-domain.us.auth0.com
# AUTH0_CLIENT_ID=your_client_id
# AUTH0_CLIENT_SECRET=your_client_secret

# Or use Google OAuth
# GOOGLE_CLIENT_ID=your_client_id
# GOOGLE_CLIENT_SECRET=your_client_secret

# Or use custom OAuth server
# OAUTH_ISSUER_URL=https://your-auth-server.com
# OAUTH_CLIENT_ID=your_client_id
# OAUTH_CLIENT_SECRET=your_client_secret

# GCP Configuration (for Cloud Run deployment)
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1

# MCPX Configuration
MCPX_PORT=9000
MCPX_LOG_LEVEL=info
